{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": { "clientKind": "git", "enabled": true, "useIgnoreFile": true },
	"files": {
		"maxSize": 2000000,
		"includes": [
			"src/**",
			"scripts/**",
			"!!**/media",
			"!!**/media/chartView",
			"!!**/media/dataPreview",
			"!!**/out",
			"!!**/coverage",
			"!!**/test-data",
			"!!**/artifacts",
			"!!**/images",
			"!!**/docs",
			"!!**/node_modules",
			"!!**/.git",
			"!!**/.github",
			"!!**/.vscode"
		]
	},
	"formatter": {
		"formatWithErrors": false,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 100
	}
}
